<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.practice.ManagerDashboardController">
    <children>
        <MenuBar style="-fx-background-color: #212121; -fx-text-fill: white;">
            <menus>
                <Menu text="File" style="-fx-text-fill: white;">
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                </Menu>
                <Menu text="Employees" style="-fx-text-fill: white;">
                    <MenuItem text="View All Employees" onAction="#handleShowAllEmployees"/>
                    <MenuItem text="View All Managers" onAction="#handleShowAllManagers"/>
                    <MenuItem text="Generate Random Employee" onAction="#handleGenerateRandomEmployee"/>
                    <MenuItem text="Add Department" onAction="#handleAddDepartment"/>
                    <MenuItem text="Count Employees in Department" onAction="#handleCountEmployeesInDepartment"/>
                    <MenuItem text="Change Employee Department" onAction="#handleChangeEmployeeDepartment"/>
                </Menu>
                <Menu text="Salary" style="-fx-text-fill: white;">
                    <MenuItem text="Change Salary" onAction="#handleChangeSalary"/>
                </Menu>
                <Menu text="Statistics" style="-fx-text-fill: white;">
                    <MenuItem text="View Earnings by ID" onAction="#handleViewEarningsById"/>
                    <MenuItem text="View Payment History" onAction="#handleViewPaymentHistory"/>
                    <MenuItem text="View Department Earnings" onAction="#handleViewDepartmentEarnings"/>
                    <MenuItem text="View All Employees Earnings" onAction="#handleViewAllEmployeesEarnings"/>
                </Menu>
                <Menu text="Profile" style="-fx-text-fill: white;">
                    <MenuItem text="Search User by ID" onAction="#handleSearchUserById"/>
                    <MenuItem text="Search User by Salary Type" onAction="#handleSearchUserBySalaryType"/>
                    <MenuItem text="Update Profile" onAction="#handleUpdateProfile"/>
                    <MenuItem text="Archive User" onAction="#handleArchiveUser"/>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.3">
            <items>
                <VBox style="-fx-background-color: #2e2e2e;">
                    <Label text="Manager Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10px;"/>
                    <Button text="View All Employees" onAction="#handleShowAllEmployees" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View All Managers" onAction="#handleShowAllManagers" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Generate Random Employee" onAction="#handleGenerateRandomEmployee" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Add Department" onAction="#handleAddDepartment" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Count Employees in Department" onAction="#handleCountEmployeesInDepartment" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Change Employee Department" onAction="#handleChangeEmployeeDepartment" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View Earnings by ID" onAction="#handleViewEarningsById" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View Payment History" onAction="#handleViewPaymentHistory" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View Department Earnings" onAction="#handleViewDepartmentEarnings" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View All Employees Earnings" onAction="#handleViewAllEmployeesEarnings" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Search User by ID" onAction="#handleSearchUserById" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Search User by Salary Type" onAction="#handleSearchUserBySalaryType" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Update Profile" onAction="#handleUpdateProfile" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Archive User" onAction="#handleArchiveUser" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Change Salary" onAction="#handleChangeSalary" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="View All Departments" onAction="#handleViewAllDepartments" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="UnArchive User" onAction="#handleUnarchiveUser" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="show all archive employee" onAction="#handleViewAllArchivedEmployees" style="-fx-background-color: #424242; -fx-text-fill: white; -fx-border-color: #616161; -fx-border-width: 1px; -fx-padding: 5px 10px; -fx-font-size: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                    <Button text="Log out" onAction="#handleLogout" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-border-color: #ff1744; -fx-border-width: 1px; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
                </VBox>
                <VBox style="-fx-background-color: #2e2e2e;">
                    <Label text="Result:" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10px;"/>
                    <TextArea fx:id="resultTextArea" editable="false" wrapText="true" prefHeight="600.0" prefWidth="500.0" style="-fx-control-inner-background: white; -fx-text-fill: black; -fx-padding: 10px; -fx-border-color: #616161; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-color: #2e2e2e;"/>
                </VBox>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
