<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.practice.LoginController"
      style="-fx-background-color: linear-gradient(to bottom, #232526, #414345);"
      prefWidth="400" prefHeight="300">

    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TextField fx:id="userNameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-color: #3c3f41; -fx-text-fill: #d0d0d0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 5; -fx-border-color: #555; -fx-border-width: 1;"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-color: #3c3f41; -fx-text-fill: #d0d0d0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 5; -fx-border-color: #555; -fx-border-width: 1;"/>

            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <children>
                    <Button text="Sign In" onAction="#onSignInButtonClick"
                            style="-fx-background-color: linear-gradient(to bottom, #4e9af1, #1c87c9); -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.75), 10, 0.5, 0.0, 0.0);"/>
                    <Button text="Sign Up" onAction="#switchToSignUp"
                            style="-fx-background-color: linear-gradient(to bottom, #4e9af1, #1c87c9); -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.75), 10, 0.5, 0.0, 0.0);"/>
                </children>
            </HBox>
        </GridPane>
    </children>
</VBox>
